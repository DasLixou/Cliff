<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Cliff.Design.Components">
  <Design.PreviewWith>
    <controls:TrackTimeline Width="600" />
  </Design.PreviewWith>

  <Style Selector="controls|TrackTimeline">
    <Setter Property="Template">
      <ControlTemplate>
        <Border Background="{DynamicResource Zinc/700}">
          <StackPanel Orientation="Horizontal" Spacing="80" Height="50" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="80 0 0 0">
            <Rectangle Width="1" Fill="{DynamicResource Gray/600}" />
            <Rectangle Width="1" Fill="{DynamicResource Gray/600}" />
            <Rectangle Width="1" Fill="{DynamicResource Gray/600}" />
            <Rectangle Width="1" Fill="{DynamicResource Gray/600}" />
            <Rectangle Width="1" Fill="{DynamicResource Gray/600}" />
            <Rectangle Width="1" Fill="{DynamicResource Gray/600}" />
          </StackPanel>  
        </Border>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
