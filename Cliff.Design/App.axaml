<Application xmlns="https://github.com/avaloniaui"
             xmlns:theme="using:Avalonia.Themes.Default"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Cliff.Design.App">
  <Application.Styles>
    <theme:DefaultTheme />
    <StyleInclude Source="/Components/TrackController.axaml" />
    <StyleInclude Source="/Components/TrackTimeline.axaml" />
  </Application.Styles>

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="avares://Cliff.Design/Assets/Colors.axaml" />
        <ResourceInclude Source="avares://Cliff.Design/Assets/Fonts.axaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
</Application>
